<%= errors_for @estimate %>
<p class="properties"><%= f.label :name %>: <%= f.text_field :name %></p>
<table class="estimates">
  <thead>
  <tr>
    <th></th>
    <th>Min</th>
    <th>Max</th>
  </tr>
  </thead>
  <tbody>
  <%= f.fields_for :feature_estimates do |g| %>
  <%= g.hidden_field :feature_id %>
    <tr>
      <td class="feature_title"><%= g.object.feature.title_with_number %></td>
      <td class="hours"><%= g.text_field :min_hours %></td>
      <td class="hours"><%= g.text_field :max_hours %></td>
    </tr>
  <% end %>
  <%= f.fields_for :line_items do |g| %>
    <tr>
      <td class="feature_title"><%= g.text_field :description %></td>
      <td class="hours"><%= g.text_field :min_hours %></td>
      <td class="hours"><%= g.text_field :max_hours %></td>
    </tr>
  <% end %>
  </tbody>
</table>
