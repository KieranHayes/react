<div id="feature_bar">
<%= form_tag project_features_path(@project), :id => "feature_bar_search", :method => :get, :remote => true do %>
  <div class="sort"><a class="<%=@sort%>"></a></div>
  <div class="search">
    <input type="text" name="q" id="q" value="" autocomplete="off" />
  </div>
  <div class="actors">
    <select id="actor_id" name="actor_id">
      <option value="0">ALL ACTORS</option>
      <% @project.actors.alphabetical.each do |a|%>
      <option value="<%=a.id%>"<% if @actor_id == a.id%> selected="selected"<%end%>><%=a.name%></option>
      <% end %>
    </select>
  </div>
  <div class="unsigned"><a class="<%=@unsigned%>">UNSIGNED (<%=@unsigned_count%>)</a></div>
  <input type="hidden" name="sort" id="sort" value="<%=@sort%>"/>
  <input type="hidden" name="unsigned" id="unsigned" value="<%=@unsigned%>"/>
<% end %>
</div>
<ul id="features">
  <%=render :partial => "feature", :collection => @features%>
</ul>
<%= link_to "Export to CSV", project_path(@project, :format => :csv)%>