<div class="inner">
<h1>Update your password</h1>

<p>Please enter the new password below and then press "Update Password".</p>

<% form_tag password_reset_path, :method => :put do %>
       <%=errors_for @user if @user %>
  <%= password_field_tag :password, nil, :style=> "margin: 1em 0" %>
  <%= submit_tag "Update Password", :style=>"display:block" %>
<% end %>
    </div>